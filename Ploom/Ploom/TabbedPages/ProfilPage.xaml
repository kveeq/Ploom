            <Label Text="Личный кабинет" HorizontalOptions="CenterAndExpand" FontSize="24" Margin="20" TextColor="White"/>
            <StackLayout Orientation="Horizontal" Margin="30">
                <Image Source="Profil.ico" HeightRequest="100" WidthRequest="100"/>
                <Label Text="Фамилия Имя Отчество 
                       +89800555359" FontSize="18" TextColor="White"/>
            </StackLayout>
        </StackLayout>
        <StackLayout VerticalOptions="StartAndExpand">
            <Button ImageSource="message.png" Text="Предложения для улучшения" TextColor="#887D7D" BackgroundColor="White" FontSize="12"/>
            <Button ImageSource="chat.png" Text="Отзывы" TextColor="#887D7D" BackgroundColor="White" FontSize="12"/>
            <StackLayout />
        </StackLayout>
    </StackLayout>
</ContentPage>